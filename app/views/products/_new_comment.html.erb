<section class="individual-product-comment">
  <% if signed_in? %>
    <div class="row">
      <div class="col-sm-6 comment"
        <p>
          <h5>Add a review:</h5>
        </p>  
        <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
          <p>
            <%= f.label :body, "Comments" %><br>
            <%= f.text_area :body %>
          </p>
          <div class="rating"></div> 
            <%= f.submit "Submit", class: "btn btn-primary btn-sm",
            style:"margin-top:20px" %>
        <% end %>
      </div>
    </div>
  <% end %>
</section>