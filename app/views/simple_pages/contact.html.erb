<div class="wrapper">
    <h1>Contact</h1>
    <p>Swing by for a cup of coffee, or leave us a message:</p>
</div> 

<div class="contactPage">
    <div class="alerts">
      <% if alert %>
        <div class="alert alert-danger" id="deviseAlert"><%= alert %></div>
      <% elsif notice %>
        <div class="alert alert-success" id="deviseAlert"><%= notice %></div>
      <% end %>
    </div>

<%= form_with(url: "/simple_pages/thank_you", method: "post", local: true) do |form| %>

  <div class="form-row align-items-center">
    <div class="form-group col-md-2"></div>
    <div class="form-group col-md-4">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
    </div>
    <div class="form-group col-md-4">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
    </div>
    <div class="form-group col-md-2"></div>
    <div class="form-group col-md-2"></div>
    <div class="form-group col-md-8">
      <%= form.label :message %>
      <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
    </div>
    <div class="form-group col-md-2"></div>
    <div class="form-group col-md-4"></div>
    <%= form.submit "Send", class: "form_label col-md-4", id: "contactSendButton" %>
    <div class="form-group col-md-4"></div>
  </div>

<% end %>
</div>